---
import { Image, Picture } from 'astro:assets'
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from '@images/post-05.png';


---

<MainLayout title="Imágenes">
    <h1 class="text-5xl text-white">Imágenes</h1>

    <img
        loading="eager"
        src="/assets/images/post-05.png" 
        alt="imagen" 
        width="250" 
        height="250"
    >

    <Image 
        src={post05Img}
        alt="imagen" 
        width="250" 
        height="250"
    />


    <h2 class="text-white">Quality Low</h2>
    <Image
        quality="low"
        src={post05Img}
        alt="imagen" 
        width="250" 
        height="250"
    />
    <h2 class="text-white">Quality High</h2>
    <Image
        quality="high"
        src={post05Img}
        alt="imagen" 
        width="250" 
        height="250"
    />

    <h2 class="text-white">Formato avif</h2>
    <Image
        format="avif"
        src={post05Img}
        alt="imagen" 
        width="250" 
        height="250"
    />

    <h2 class="text-white">Componente Picture</h2>
    <Picture
        formats={["webp", "avif", "jpeg"]}
        src={post05Img}
        alt="imagen" 
        width="250" 
        height="250"
    />

    <h2 class="text-white">Componente Picture varios tamaños</h2>
    <Picture
        formats={["webp", "avif", "jpeg"]}
        src={post05Img}
        alt="imagen" 
        widths={[240, 540, 720, post05Img.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
    />

    <h2 class="text-white">Componente Picture densities</h2>
    <Picture
        formats={["webp", "avif", "jpeg"]}
        src={post05Img}
        alt="imagen"
        width={post05Img.width / 2}
        densities={[1.5, 2]}
    />

    <div
        style={{
            height: '3000px',
        }}
    ></div>

    <img
        loading="lazy"
        src="/assets/images/post-01.png" 
        alt="imagen" 
        width="250" 
        height="250"
    >
</MainLayout>